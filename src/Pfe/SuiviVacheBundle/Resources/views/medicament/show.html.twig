{% extends 'layout_admin.html.twig' %}

{% block body %}

    <div class="row marg_bot_20">
        <div class="col-md-12">
            <ul class="liste_btn_action">
                <li>
                    {{ form_start(delete_form) }}
                    <button type="submit" class="btn btn-danger supprimer_element" msg="Voulez-vous supprimer cet médicament" ><span class="fa fa-trash-alt"></span> Supprimer</button>
                    {{ form_end(delete_form) }}
                </li>
                <li>
                    <a class="btn btn-info" href="{{ path('medicament_index') }}"><span class="fa fa-bars"></span> Liste des médicaments</a>
                </li>
            </ul>
        </div>
    </div>

    <table class="table table-striped">
        <tbody>


            <tr>
                <th>Categorie</th>
                <td>{{ medicament.categorie }}</td>
            </tr>
            <tr>
                <th>Designation</th>
                <td>{{ medicament.designation }}</td>
            </tr>
        </tbody>
    </table>


{% endblock %}
