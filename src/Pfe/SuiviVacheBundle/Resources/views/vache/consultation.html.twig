{% extends 'layout_admin.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}

{% block title %}Consultation vache{% endblock %}
{% block title_parag %}Consultation vache{% endblock %}
{% block body %}
    <div class="row marg_bot_20">
        <div class="col-md-12">
            <ul class="liste_btn_action">
                <li>
                    <a class="btn btn-info" href="{{ path('vache_index') }}"><span class="fa fa-bars"></span> Liste des
                        Consultations</a>
                </li>
            </ul>
        </div>
    </div>
    {{ form_start(form) }}
    <div class="row">
        <div class="col-md-12">
            {{ form_row(form.observation) }}
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <input type="submit" class="btn btn-success" value="Enregistrer"/>
        </div>
    </div>
    {{ form_end(form) }}
    <div class="portlet-grid  panel-success" style="margin-top: 20px;">
        <div class="panel-heading">
            <h3 class="panel-title">Observations Précédentes</h3>
        </div>
        <div class="panel-body">
            {% for consultation in consultations %}
            <div class="row">
                <div class="col-md-9">
                        <span class="nom_user">{{ consultation.user.firstName }} {{ consultation.user.lastName }}</span>
                        {% if consultation.dateConsultation %}
                            [<span class="fa fa-calendar taille_icone_date"></span> {{ consultation.dateConsultation|date('d-m-Y') }} <span class="fa fa-clock taille_icone_date"></span> {{ consultation.dateConsultation|date('H:i') }} ]
                        {% endif %}
                        <p>{{ consultation.observation }}</p>
                        <hr>
                </div>
                <div class="col-md-3 text-right">
                    <a class="btn btn-success" href="{{ path('consultation_ordonnance',{'id':consultation.id} ) }}"><span class="fa fa-bars"></span>
                        Ordonnance</a>
                </div>
                <hr>
                <div class="col-md-3 text-right">
                    <a  class="btn btn-warning btn-xs" href="{{ path('consultation_edit',{'id':consultation.id} ) }}"><span class="fa fa-edit"></span> Modifier</a>
                </div>
            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
