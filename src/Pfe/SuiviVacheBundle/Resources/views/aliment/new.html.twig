{% extends 'layout_admin.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block title %}Nouvelle aliment{% endblock %}
{% block title_parag %}Nouvelle aliment{% endblock %}
{% block body %}
    <div class="row marg_bot_20">
        <div class="col-md-12">
            <ul class="liste_btn_action">
                <li>
                    <a class="btn btn-info" href="{{ path('aliment_index') }}"><span class="fa fa-bars"></span> Liste des aliments</a>
                </li>
            </ul>
        </div>
    </div>

    {{ form_start(form) }}
<div class="row">
    <div class="col-md-6">
        {{ form_row(form.code) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.designation) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.qteStock) }}
    </div>
    <div class="col-md-6">
        {{ form_row(form.qteMin) }}
    </div>
</div>

    <div class="row">
        <div class="col-md-12">
            <input type="submit" class="btn btn-success" value="Enregistrer" />
        </div>
    </div>
    {{ form_end(form) }}

{% endblock %}
