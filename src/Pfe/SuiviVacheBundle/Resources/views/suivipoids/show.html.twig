{% extends 'layout_admin.html.twig' %}

{% block body %}
    <h1>Suivipoid</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ suiviPoid.id }}</td>
            </tr>
            <tr>
                <th>Datesuivi</th>
                <td>{% if suiviPoid.dateSuivi %}{{ suiviPoid.dateSuivi|date('Y-m-d H:i:s') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Poidsactuel</th>
                <td>{{ suiviPoid.poidsActuel }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('suivipoids_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('suivipoids_edit', { 'id': suiviPoid.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
