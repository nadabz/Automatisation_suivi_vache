{% extends 'layout_admin.html.twig' %}
{% form_theme form 'bootstrap_3_layout.html.twig' %}
{% block title %}Nouveau Fournisseur {% endblock %}
{% block title_parag %}Nouveau Fournisseur{% endblock %}
{% block body %}
<div class="row marg_bot_20">
    <div class="col-md-12">
        <ul class="liste_btn_action">
            <li>
                <a class="btn btn-info" href="{{ path('fournisseur_index') }}"><span class="fa fa-bars"></span> Liste des fournisseurs</a>
            </li>
        </ul>
    </div>
</div>
    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-4">
            {{ form_row(form.code) }}
        </div>
    <div class="col-md-4">
        {{ form_row(form.nom) }}
    </div>

        <div class="col-md-4">
            {{ form_row(form.adresse) }}
        </div>
        <div class="col-md-4">
            {{ form_row(form.tel) }}
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            <input type="submit" class="btn btn-success" value="Enregistrer Fournisseur " />
        </div>
    </div>
    {{ form_end(form) }}
{% endblock %}
